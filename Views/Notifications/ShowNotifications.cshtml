@model IEnumerable<Smart_Trafic_Management_System.Models.Notification>

@{
    ViewBag.Title = "ShowNotifications";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<style>
    .table-hover > tbody > tr:hover > td, .table-hover > tbody > tr:hover > th {
        background-color: #550055;
        color: #eeeeee;
    }
</style>

<!-- Notifications-->
<div class="orders">
    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-body">
                    <h1 class="text-center">Feed Backs</h1>
                </div>
                @using (Html.BeginForm("ShowNotifications", "Notifcations", FormMethod.Get))
                {

                    <div class="input-group">
                        <span class="input-group-addon">Search By Reciever Email</span>
                        @Html.TextBox("search", "", new { @class = "form-control col-md-5" })
                        <input type="submit" value="Search" class="btn btn-success" />


                    </div>

                    <div class="card-body--">
                        <div class="table-stats order-table ov-h ">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>

                                        <th>
                                            <b>Sent To</b>
                                        </th>
                                        
                                        <th><b>message</b></th>
                                        <th>
                                            <b>Location</b>
                                        </th>
                                        <th>
                                            <b>Date</b>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var n in Model)
                                    {
                                        <tr  class="tr-hover" id="tr">
                                            <td>@n.To </td>
                                            
                                            <td>@n.Description </td>
                                            <td>@n.Location </td>
                                            
                                            <td>@string.Format("{0:dd-MM-yyyy}", @n.Date)</td>
                                            
                                        </tr>

                                    
                                    }


                                </tbody>
                            </table>
                        </div> <!-- /.table-stats -->
                    </div>
                }
            </div> <!-- /.card -->
        </div>  <!-- /.col-lg-8 -->


    </div>
</div>
<!-- /.Notifications -->
